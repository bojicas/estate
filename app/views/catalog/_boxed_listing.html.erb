<% for property in @hot_properties %>
	<div class="box">
		<%= property_photo_for(property) %>

		<table>
			<tr>
	    	<td><b>Type:</b></td>
				<td><%=h property.find_type_name %></td>
			</tr>
			<tr>
				<td><b>Address:</b></td>
				<td><%=h property.building.name %></td>
			</tr>
			<%= "<tr><td><b>Bedrooms:</b></td> <td>#{property.bedrooms}</td></tr>" if(property.bedrooms > 0) %>
			<tr>
				<td><b>View:</b></td>
				<td><%=h property.view %></td>
			</tr>
			<tr>
				<td><b>Area:</b></td>
				<td><%=h property.area %> sqft (<%=h property.area_in_sqm %> sqm)</td>
			</tr>
			<tr>
	    	<td><b>Price:</b></td>
				<td><%= number_to_currency(property.price, :unit => "AED ", :precision => 0) %></td>
			</tr>
			<tr>
				<td colspan="2">
					<%=h property.building.project.name %>,
					<%=h property.building.project.neighborhood.name %>,
					<%=h property.building.project.neighborhood.emirate.name %>
				</td>
			</tr>
		</table>

		<div class="btns">
			<a href="/catalog/<%=h property.id %>"><span>Inquiry</span></a>
		</div>
		<div class="clear"></div>
	</div>
<% end %>	


