<h1>Listing buildings</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Name</th>
    <th>Url</th>
    <th>Description</th>
  </tr>

<% for building in @buildings %>
  <tr>
    <td><%=h building.project.neighborhood.emirate.name %> - <%=h building.project.neighborhood.name %> - <%=h building.project.name %></td>
    <td><%=h building.name %></td>
    <td><%=h building.url %></td>
    <td><%=h building.description %></td>
    <td><%= link_to 'Show', building %></td>
		<td><%= link_to 'Select', :action => "select", :id => building.id %>
    <td><%= link_to 'Edit', edit_building_path(building) %></td>
    <td><%= link_to 'Destroy', building, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

